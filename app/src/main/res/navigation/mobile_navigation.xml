<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_quran">

    <fragment
        android:id="@+id/navigation_quran"
        android:name="com.sabiha.islamicapp.ui.quran.QuranFragment"
        android:label="@string/title_quran"
        tools:layout="@layout/fragment_quran" />

    <fragment
        android:id="@+id/navigation_qibla"
        android:name="com.sabiha.islamicapp.ui.qibla.QiblaFragment"
        android:label="@string/title_qibla"
        tools:layout="@layout/fragment_qibla" />

    <fragment
        android:id="@+id/navigation_prayer_time"
        android:name="com.sabiha.islamicapp.ui.prayertime.PrayerTimeFragment"
        android:label="@string/title_prayer_time"
        tools:layout="@layout/fragment_prayer_time" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.sabiha.islamicapp.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>